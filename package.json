{
  "name": "didymus-desktop-frontend",
  "version": "0.1.0",
  "main": "src/main/main.mjs",
  "author": "Didymus Team",
  "private": true,
  "description": "Desktop frontend for Didymus, built with Next.js and Electron",
  "scripts": {
    "predev": "node scripts/build.mjs",
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev --turbopack\" \"electron .\"",
    "prebuild": "node scripts/build.mjs",
    "build": "next build && electron-builder --win --x64",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "electron-serve": "^2.1.1",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "glob": "^11.0.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": "22.17.1",
    "npm": "11.5.1"
  }

}
